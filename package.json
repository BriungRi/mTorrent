{
  "name": "mTorrent",
  "description": "P2P File Sharing using MongoD",
  "version": "0.1.0",
  "author": "Aditya, Brian, Nathan",
  "build": {
    "appId": "com.mongodb.mtorrent",
    "mac": {
      "category": "utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^20.22.0",
    "foreman": "^2.0.0",
    "react-scripts": "0.8.5"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "ejs": "~2.5.7",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "internal-ip": "^3.0.1",
    "mongodb": "^3.1.1",
    "morgan": "~1.9.0",
    "portscanner": "^2.2.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-dropzone": "^4.2.13",
    "request": "^2.87.0",
    "unirest": "^0.5.1"
  },
  "homepage": "./",
  "main": "src/electron-starter.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron-pack": "build --mac",
    "preelectron-pack": "yarn build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 3000"
  }
}
